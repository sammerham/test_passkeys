datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  publicKey  String   @unique
  passKeys   PassKey[]
}

model PassKey {
  id                 Int      @id @default(autoincrement())
  credentialID       String
  publicKey          String
  counter            Int
  deviceType         String
  backedUp           Boolean
  userId             Int
  User               User     @relation(fields: [userId], references: [id])
}